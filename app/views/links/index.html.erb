<% @links.each do |link| %>
  <div class="link row clearfix">
    <h3>
      <%= link.title%><br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> ago by Admin</small>
    </h3>

    <div class="btn-group">
      <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm btn-success" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm btn-danger" do %>
        <span class="glyphicon glyphicon-chevron-down">
        Downvote
        <%= link.get_downvotes.size %>
      <% end %>
      <%= link_to link, class: "btn btn-default btn-sm btn-primary" do %>
        <span class="glyphicon glyphicon-comment"></span>
        <%= pluralize(link.comments.count, "Comment") %>
      <% end %>
    </div>
  </div>
<% end %>
<%= paginate@links, :theme => 'twitter-bootstrap-3', :pagination_class => "pagination-small pagination-centered" %>
